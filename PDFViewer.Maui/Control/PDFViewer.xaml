<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:local="clr-namespace:ZPF.PDFViewer.Maui"
   xmlns:pdf="clr-namespace:ZPF.PDFViewer"
   x:DataType="local:PDFViewer"
   x:Class="ZPF.PDFViewer.Maui.PDFViewer">

   <Grid BackgroundColor="LightGray" >

      <CollectionView x:Name="collectionView" >
         <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="pdf:PDFPageInfo" >
               <StackLayout>
                  <Label Text="{Binding PageNumber}" />
                  <Label Text="{Binding ImageFileName}" />
                  <Image Source="{Binding ImageFileName}" BackgroundColor="DarkGray" />
               </StackLayout>
            </DataTemplate>
         </CollectionView.ItemTemplate>
      </CollectionView>

      <Label 
            Text="Welcome to .PDFViewer!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
   </Grid>
</ContentView>
